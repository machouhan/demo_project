<div class="container pr">
    <h2><%= @product.name %></h2>
    <div id="img"><%= image_tag(@product.image, :size => "500x300")%></div>
    <h2><%= @product.price %></h2>
    <p><%= @product.description %></p>

    <% if user_signed_in? %>
      <% if current_user.role == "seller" %>
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %><br>
           <%= button_to "Delete", product_path(@product), method: :delete %><br>
          <%= link_to "Back", products_path, class: "btn btn-primary" %> 
      <% end %>
    <% else %>
        <%= link_to "Back", products_path, class: "btn btn-primary" %> 
    <% end %>          

</div>


