<div class="container pr">
  <%= form_with model: product do |form| %>
    <div class="form-group">
      <%= form.label :name %><br>
      <%= form.text_field :name, class: "form-control" %><br>  
    </div>

    <div class="form-group">
      <%= form.label :price %><br>
      <%= form.text_field :price, class: "form-control" %><br>  
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :description, class: "form-control" %><br>
    </div>

    <div>
      <%= form.label :catagory %><br />
      <%= form.select :catagory, ["Mobile", "Mobile accessories"] %>
    </div><br>

    <div>
      <%= form.label :image %><br>
      <%= form.file_field :image %><br>
    </div><br>
    
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>