<%= form_with model: product do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %><br>  
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %><br>  
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>